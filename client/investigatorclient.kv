<MainScreen>:
    id: main_screen
    
    StreamViewer:
        id: stream_viewer
        opacity: 0

    ActionBar:
        pos_hint: {'top': 1}

        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'iClient'
                with_previous: False

            ActionButton:
                icon: 'icons/online_false.png'
                size: (30, 30)
                id: online

            ActionGroup:
                ActionButton:
                    text: 'Stream'
                    on_press:
                        root.change_stream_visibility()

            ActionGroup:
                ActionButton:
                    text: 'Settings'
                    on_press:
                        root.manager.current = 'settings'

    Button:
        id: take_picture_button
        size_hint: None, None
        width: 80
        height: 80
        background_normal: 'icons/camera_normal.png'
        background_down: 'icons/camera_down.png'
        pos_hint: {'top': .6, 'right': .99}
        border: (0, 0, 0, 0)
        opacity: 0

        on_press:
            if self.opacity and not stream_viewer.is_save_image: stream_viewer.is_save_image = True


    BoxLayout:

        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'bottom'

            # Support panel
            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'center'

                BoxLayout:
                    size_hint: (0.35, 0.5)
                    orientation: 'vertical'
                    spacing: 5

                    Slider:
                        orientation: 'vertical'
                        # size_hint_x: 0.3
                        min: 0
                        max: 255
                        step: 1

                        on_touch_up:
                            if args[1].grab_current == self: root.send_speed(int(self.value))

                    Switch:
                        size_hint: (1, 0.3)

                        on_active:
                            if self.active: root.send(b'\x02')
                            else: root.send(b'\x03')


            # Left & Rgiht panel
            BoxLayout:
                spacing: 3
                padding: 3
                size_hint: (0.6, 0.2)

                Button:
                    text: '<'
                    font_size: '30sp'
                    on_press:
                        root.send(b'\x05')

                    on_release:
                        root.send(b'\x04')

                Button:
                    text: '>'
                    font_size: '30sp'
                    on_press:
                        root.send(b'\x06')


                    on_release:
                        root.send(b'\x04')

        # Forward & Backward panel
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'

            BoxLayout:
                spacing: 3
                padding: 3
                size_hint: (0.6, 0.2)

                Button:
                    text: '\\/'
                    font_size: '20sp'
                    on_press:
                        root.send(b'\x09')

                    on_release:
                        root.send(b'\x07')

                Button:
                    text: '/\\'
                    font_size: '20sp'
                    on_press:
                        root.send(b'\x08')

                    on_release:
                        root.send(b'\x07')
